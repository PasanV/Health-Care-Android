<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linear_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageViewdoc"
            android:layout_width="215dp"
            android:layout_height="195dp"
            android:layout_marginTop="93dp"
            android:background="#11000000"
            android:backgroundTint="@color/background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.469"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ambulance_480px" />

        <EditText
            android:id="@+id/txt_name"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            android:cursorVisible="true"
            android:drawableLeft="@drawable/ic_action_name"
            android:ems="10"
            android:background="@drawable/txtboxescustom"
            android:hint="User Name"
            android:inputType="textPersonName"
            android:textColor="#FFFF"
            android:textColorHighlight="#FFFF"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewdoc" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <EditText
            android:id="@+id/txt_pass"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="44dp"
            android:background="@drawable/txtboxescustom"
            android:cursorVisible="true"
            android:drawableLeft="@drawable/ic_action_pass"
            android:ems="10"
            android:hint="Password"
            android:inputType="numberPassword"
            android:textColor="#FFFF"
            android:textColorHighlight="#FFFF"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.906" />

        <Button

            android:id="@+id/login"
            android:layout_width="1in"
            android:layout_height="wrap_content"
            android:text="Login"
            android:background="@drawable/btn_custom"
            android:textColor="#FFFFFF"

            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <TextView
            android:background="@drawable/textcustom"
            android:id="@+id/txtregister"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_marginBottom="48dp"
            android:editable="false"
            android:shadowColor="#000A0A0A"
            android:text="Don,t have an account? Sign up now"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textIsSelectable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.765" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>