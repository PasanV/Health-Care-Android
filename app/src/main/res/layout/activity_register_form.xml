<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer.register_form"
android:background="@drawable/background"

    >

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Patient Register"
            android:textColor="#FFFF"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.344" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        
        <EditText
            android:id="@+id/txt_regname"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/txtboxescustom"
            android:cursorVisible="true"
            android:drawableLeft="@drawable/ic_action_name"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColor="#FFFF"
            android:textColorHighlight="#FFFF"
            >

        </EditText>

        <EditText
            android:id="@+id/txt_regpass"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/txtboxescustom"
            android:cursorVisible="true"
            android:drawableLeft="@drawable/ic_action_pass"
            android:ems="10"
            android:hint="Password"
            android:inputType="number"
            android:textColor="#FFFF"
            android:textColorHighlight="#FFFF"
            >

        </EditText>

        <EditText
            android:id="@+id/txt_regconfpass"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/txtboxescustom"
            android:cursorVisible="true"
            android:drawableLeft="@drawable/ic_action_pass"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="numberPassword"
            android:textColor="#FFFF"
            android:textColorHighlight="#FFFF"
            >

        </EditText>

        <EditText
            android:id="@+id/txt_regemail"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/txtboxescustom"
            android:cursorVisible="true"
            android:drawableLeft="@drawable/ic_action_e_mail"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColor="#FFFF"
            android:textColorHighlight="#FFFF"
            >

        </EditText>
        <EditText
            android:id="@+id/txt_regphone"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/txtboxescustom"
            android:cursorVisible="true"
            android:drawableLeft="@drawable/ic_action_phone"
            android:ems="10"
            android:hint="phone number"
            android:inputType="phone"
            android:textColor="#FFFF"
            android:textColorHighlight="#FFFF"
            >

        </EditText>
        <Button
            android:id="@+id/btn_register"

            android:layout_width="1in"
            android:layout_height="wrap_content"
            android:text="Register"
            android:background="@drawable/btn_custom"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp"
            />

        <Button
            android:id="@+id/btn_login"

            android:layout_width="1in"
            android:layout_height="wrap_content"
            android:text="Login"
            android:background="@drawable/btn_custom"
            android:textColor="#FFFFFF"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>